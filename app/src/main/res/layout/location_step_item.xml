<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Left Column: Icon and Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="12dp">

        <!-- Icon (Circle or Location Pin) -->
        <ImageView
            android:id="@+id/stepIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_circle_outline"
            android:tint="#6B7280" />

        <!-- Vertical Dots Connector -->
        <ImageView
            android:id="@+id/dotsConnector"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_dots_vertical"
            android:layout_marginTop="6dp"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Right Column: Input Box -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Input Box Container -->
        <EditText
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/address_input_background"
            android:padding="12dp"
            android:text="Address details here"
            android:textColor="#1F2937"
            android:textSize="14sp"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top|start" />

    </LinearLayout>

</LinearLayout>
