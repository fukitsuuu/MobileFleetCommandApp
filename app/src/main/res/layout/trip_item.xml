<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Trip ID -->
            <TextView
                android:id="@+id/tripIdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIDN-1000000"
                android:textColor="#0F172A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/status_badge_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Requester and Urgency Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Requester -->
            <TextView
                android:id="@+id/requesterText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Requester Name"
                android:textColor="#374151"
                android:textSize="14sp" />

            <!-- Urgency Badge -->
            <TextView
                android:id="@+id/urgencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/urgency_badge_background"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#374151"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />



        <!-- Description Section - If available from trip_tb -->
        <LinearLayout
            android:id="@+id/tripDescriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#6B7280"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip description from trip_tb"
                android:textColor="#374151"
                android:textSize="13sp"
                android:background="#F9FAFB"
                android:padding="8dp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Vehicle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle"
                    android:textColor="#6B7280"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vehicleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIDN-1000000"
                    android:textColor="#374151"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="#6B7280"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 km"
                    android:textColor="#374151"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="#6B7280"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hrs"
                    android:textColor="#374151"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Budget Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget:"
                android:textColor="#6B7280"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/budgetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±0.00"
                android:textColor="#059669"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Dropdown Content -->
        <LinearLayout
            android:id="@+id/dropdownContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <!-- Map Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#F3F4F6"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <WebView
                    android:id="@+id/mapWebView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!-- Saved Locations Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:tint="#6B7280"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved Locations"
                        android:textColor="#374151"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Locations List -->
                <LinearLayout
                    android:id="@+id/locationsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Loading indicator for locations -->
                    <ProgressBar
                        android:id="@+id/locationsLoadingIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="visible" />

                    <!-- No locations message -->
                    <TextView
                        android:id="@+id/noLocationsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No saved locations found"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <!-- Expenses Area - Only visible when status is 'Delivered' -->
            <LinearLayout
                android:id="@+id/expensesArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_receipt"
                        android:tint="#6B7280"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trip Expenses"
                        android:textColor="#374151"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Expense Type Dropdown -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense Type"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select expense type"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/expenseTypeDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="@drawable/dropdown_background"
                            android:padding="12dp"
                            android:textSize="16sp"
                            android:textColor="#9CA3AF"
                            android:textStyle="bold"
                            android:hint="Select expense type"
                            android:completionThreshold="0" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Cost Amount Input -->
                <LinearLayout
                    android:id="@+id/costAmountContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost Amount"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280"
                        app:prefixText="â‚±"
                        app:prefixTextColor="#9CA3AF">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/costAmountInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:textColor="#9CA3AF" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Description Input (for Supply Cost and Other) -->
                <LinearLayout
                    android:id="@+id/descriptionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter description"
                        app:boxStrokeColor="#D1D5DB"
                        app:hintTextColor="#6B7280">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/descriptionInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:textSize="14sp"
                            android:textColor="#9CA3AF" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Receipt Image Upload -->
                <LinearLayout
                    android:id="@+id/receiptImagesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receipt Images"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Upload Button and Images Row -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:padding="0dp"
                            android:gravity="center_vertical">

                            <!-- Upload Button -->
                            <ImageView
                                android:id="@+id/uploadReceiptButton"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/upload_button_background"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_camera"
                                android:tint="#6B7280"
                                android:padding="20dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_marginEnd="8dp" />

                            <!-- Selected Images Container -->
                            <LinearLayout
                                android:id="@+id/selectedImagesContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:orientation="horizontal" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <!-- Recorded Expenses List -->
                <LinearLayout
                    android:id="@+id/expensesListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/noExpensesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No expenses recorded"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Add Expenses Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addExpenseButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Add Expenses"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:backgroundTint="#3B82F6"
                    app:cornerRadius="8dp"
                    android:drawableStart="@drawable/ic_receipt"
                    android:drawablePadding="8dp" />

                <!-- Total Expenses Display -->
                <LinearLayout
                    android:id="@+id/totalExpensesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F3F4F6"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Expenses:"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalExpensesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textColor="#059669"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Confirm Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Confirm Trip"
                android:textColor="@android:color/white"
                app:backgroundTint="#10B981"
                app:cornerRadius="8dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
