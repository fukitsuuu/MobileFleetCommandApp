<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Maintenance"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please provide a reason for cancelling this maintenance:"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Input Field -->
    <EditText
        android:id="@+id/reasonInput"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Enter cancellation reason..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="4"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:drawable/edit_text"
        android:gravity="top|start"
        android:layout_marginBottom="20dp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#6B7280"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CONFIRM"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#DC2626"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
