<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/location_item_background"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Location Icon -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_location"
        android:tint="#059669"
        android:layout_marginEnd="12dp" />

    <!-- Location Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locationNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Name"
            android:textColor="#374151"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full address details"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Distance -->
    <TextView
        android:id="@+id/locationDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5 km"
        android:textColor="#059669"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/distance_badge_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

</LinearLayout>
